{
  "description": "Proxy to Backend",
  "states": [
    {
      "name": "Trigger",
      "type": "trigger",
      "transitions": [
        {
          "next": "Find-a-pickup-keyword",
          "event": "incomingMessage"
        },
        {
          "event": "incomingCall"
        },
        {
          "event": "incomingRequest"
        }
      ],
      "properties": {
        "offset": {
          "x": 0,
          "y": 0
        }
      }
    },
    {
      "name": "Find-a-pickup-keyword",
      "type": "split-based-on",
      "transitions": [
        {
          "next": "Send-fallback-text",
          "event": "noMatch"
        },
        {
          "next": "Proxy-request",
          "event": "match",
          "conditions": [
            {
              "friendly_name": "If value matches_any_of pickup, pick",
              "arguments": [
                "{{trigger.message.Body}}"
              ],
              "type": "matches_any_of",
              "value": "pickup, pick, request"
            }
          ]
        }
      ],
      "properties": {
        "input": "{{trigger.message.Body}}",
        "offset": {
          "x": -10,
          "y": 270
        }
      }
    },
    {
      "name": "Send-fallback-text",
      "type": "send-message",
      "transitions": [
        {
          "event": "sent"
        },
        {
          "event": "failed"
        }
      ],
      "properties": {
        "offset": {
          "x": -460,
          "y": 270
        },
        "service": "{{trigger.message.InstanceSid}}",
        "channel": "{{trigger.message.ChannelSid}}",
        "from": "{{flow.channel.address}}",
        "to": "{{contact.channel.address}}",
        "body": "Thank you for message. Unfortunately, we can't handle you request. Please, try again."
      }
    },
    {
      "name": "Proxy-request",
      "type": "make-http-request",
      "transitions": [
        {
          "next": "Handle-server-response",
          "event": "success"
        },
        {
          "event": "failed"
        }
      ],
      "properties": {
        "offset": {
          "x": 60,
          "y": 670
        },
        "method": "POST",
        "content_type": "application/json;charset=utf-8",
        "body": "{\"message\": \"{{trigger.message.Body}}\", \"phone\": \"{{trigger.message.From}}\"}",
        "url": "https://washmix.evrone.app/api/v1.0/sms/twilio_webhook/"
      }
    },
    {
      "name": "Send-checkout-text",
      "type": "send-message",
      "transitions": [
        {
          "event": "sent"
        },
        {
          "event": "failed"
        }
      ],
      "properties": {
        "offset": {
          "x": -550,
          "y": 1290
        },
        "service": "{{trigger.message.InstanceSid}}",
        "channel": "{{trigger.message.ChannelSid}}",
        "from": "{{flow.channel.address}}",
        "to": "{{contact.channel.address}}",
        "body": "Thank you for requesting a pickup. You’re scheduled for {{widgets.Proxy-request.parsed.message}} . Please have your bag out. If any questions call us back"
      }
    },
    {
      "name": "Send-no-match-found",
      "type": "send-message",
      "transitions": [
        {
          "event": "sent"
        },
        {
          "event": "failed"
        }
      ],
      "properties": {
        "offset": {
          "x": 740,
          "y": 1130
        },
        "service": "{{trigger.message.InstanceSid}}",
        "channel": "{{trigger.message.ChannelSid}}",
        "from": "{{flow.channel.address}}",
        "to": "{{contact.channel.address}}",
        "body": "Thank you for your pickup request. Unfortunately, we can’t locate\nyou in our database. But not to worry, we will be in touch soon"
      }
    },
    {
      "name": "Handle-server-response",
      "type": "split-based-on",
      "transitions": [
        {
          "event": "noMatch"
        },
        {
          "next": "Send-checkout-text",
          "event": "match",
          "conditions": [
            {
              "friendly_name": "If value equal_to success",
              "arguments": [
                "{{widgets.Proxy-request.parsed.event}}"
              ],
              "type": "equal_to",
              "value": "success"
            }
          ]
        },
        {
          "next": "Send-to-Flex",
          "event": "match",
          "conditions": [
            {
              "friendly_name": "If value equal_to fail",
              "arguments": [
                "{{widgets.Proxy-request.parsed.event}}"
              ],
              "type": "equal_to",
              "value": "fail"
            }
          ]
        }
      ],
      "properties": {
        "input": "{{widgets.Proxy-request.parsed.event}}",
        "offset": {
          "x": 60,
          "y": 970
        }
      }
    },
    {
      "name": "Send-to-Flex",
      "type": "send-to-flex",
      "transitions": [
        {
          "event": "callComplete"
        },
        {
          "event": "failedToEnqueue"
        },
        {
          "event": "callFailure"
        }
      ],
      "properties": {
        "offset": {
          "x": 530,
          "y": 1490
        }
      }
    }
  ],
  "initial_state": "Trigger",
  "flags": {
    "allow_concurrent_calls": true
  }
}